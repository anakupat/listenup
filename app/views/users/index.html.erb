<h1>find friends</h1>

<table style="color: white" class="table">
  <% @users.each do |user| %>
    <% if user.username != current_user.username %>
      <tr>
        <td>
          <%= user.username %>
        </td>
         <% if user_signed_in? %>

        <td>
          <%= link_to "add friend", friendships_path(:friend_id => user.id), :method => :post %>
        </td>
          <% end %>
      </tr>
    <% end %>
  <% end %>
</table>

